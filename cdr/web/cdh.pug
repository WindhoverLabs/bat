.row.os-theme-dark
  article.col-xs-12.col-sm-12
    header
      span.widget-icon
        i.fa.fa-table
      h2 BAT - Command and Data Handling
    div.widget-body.table-responsive
      table.table.table-condensed
            tbody
              tr
                th Cmd Count
                td
                  div(data-cdr={tlm:[{name:'/BAT/HK/CmdCnt'}],indicator:'text'}) ---
              tr
                th Error Count
                td
                  div(data-cdr={tlm:[{name:'/BAT/HK/CmdErrCnt'}],indicator:'text'}) ---
    footer.btn-group(role="group")      
      button.btn.cdr-outline-primary(data-cdr={cmd:{name:'/BAT/Noop'},indicator:'cmd'}) No-Op    
      button.btn.cdr-outline-primary(data-cdr={cmd:{name:'/BAT/Reset'},indicator:'cmd'}) Reset
